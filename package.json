{
  "name": "jest-vs-mocha",
  "version": "0.0.1",
  "description": "Jest vs Mocha",
  "license": "MIT",
  "scripts": {
    "test": "mocha --compilers ts:ts-node/register 'src/**/__tests__/*.spec.ts'",
    "test2": "jest --runInBand"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^3.4.35",
    "@types/mocha": "^2.2.39",
    "babel-jest": "^19.0.0",
    "chai": "^3.5.0",
    "jest": "^19.0.2",
    "mocha": "^3.2.0",
    "ts-jest": "^19.0.6",
    "ts-node": "^2.1.0",
    "tslint": "^4.4.2",
    "typescript": "^2.2.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "./node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "jest/*(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
